{
    "app-id": "me.dusansimic.DynamicWallpaper",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "me.dusansimic.DynamicWallpaper",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-data/backgrounds:create",
        "--filesystem=xdg-data/gnome-background-properties:create"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libadwaita",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "tag": "1.2.alpha",
                    "commit": "9150f4016a04064a00733b78391c8e6aad49bee8"
                }
            ],
            "modules": [
                {
                    "name": "libsass",
                    "cleanup": [
                        "*"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/sass/libsass.git",
                            "tag": "3.6.5",
                            "commit": "f6afdbb9288d20d1257122e71d88e53348a53af3"
                        },
                        {
                            "type": "script",
                            "dest-filename": "autogen.sh",
                            "commands": [
                                "autoreconf -si"
                            ]
                        }
                    ]
                },
                {
                    "name": "sassc",
                    "cleanup": [
                        "*"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/sass/sassc.git",
                            "tag": "3.6.2",
                            "commit": "66f0ef37e7f0ad3a65d2f481eff09d09408f42d0"
                        },
                        {
                            "type": "script",
                            "dest-filename": "autogen.sh",
                            "commands": [
                                "autoreconf -si"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "dynamic-wallpaper",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}